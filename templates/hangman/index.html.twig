{% extends 'base.html.twig' %}

{% block body %}
<div class="jumbotron-img jumbotron jumbotron-fluid">
    <div class="container">
        <img class="mr-3" style="float: left;" src="{{ asset('images/JackCharGradBlankBG.png') }}" width="125"
            height="125">
        <h1 class="display-4">Jack Hardy</h1>
        <p class="lead">An aspiring developer, lover of lego and player of games</p>
    </div>
</div>
<div class="mt-5 p-3" style="margin: auto; width: 50%;">
    <form action="{{ path('app_hangman') }}" class="form-details" method="post">
        <h1 class="h3 mb-3 font-weight-normal">
            {% if return == true %}
            Too hard? or maybe too easy, regardless, don't worry you can always try again
            {% else %}
            Wanna play a game?
            {% endif %}
        </h1>
        <label for="inputName">Name</label>
        <input type="text" name="name" id="inputName" class="h3 mb-3 form-control" placeholder="Name"
            pattern="[a-zA-Z\s]+" required autofocus>
        <label for="birthday">Birthday</label>
        <input type="date" name="birthday" id="inputBirthday" class="h3 mb-3 form-control" required autofocus>
        <p>Difficulty:</p>
        <input type="radio" name="difficulty" id="easy" value="0" class="h3 mb-3">
        <label for="easy">Easy</label><br>
        <input type="radio" name="difficulty" id="medium" value="1" class="h3 mb-3" checked="checked">
        <label for="medium">Medium</label><br>
        <input type="radio" name="difficulty" id="hard" value="2" class="h3 mb-3">
        <label for="hard">Hard</label><br>
        <input type="radio" name="difficulty" id="extreme" value="3" class="h3 mb-3">
        <label for="extreme">Extreme</label>
        <button class="btn btn-lg btn-primary btn-block" type="submit">
            Sure, I'll play!
        </button>
    </form>
    <p style="color:rgb(94, 116, 131);font-size:10px;">Please note: absolutly no data is stored, this is simply a fun coding example</p>
</div>
{% endblock %}